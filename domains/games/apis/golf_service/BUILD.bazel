cc_binary(
    name = "golf_service",
    srcs = [
        "Main.cc",
    ],
    deps = [
        ":router",
        "//domains/games/libs/cards/golf:doc_db_game_store",
        "//domains/platform/libs/doc_db_client",
        "@com_github_grpc_grpc//:grpc++",
        "@com_google_absl//absl/log:initialize",
        "@mongoose_cc//:mongoose",
    ],
