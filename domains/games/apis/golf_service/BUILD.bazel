)

cc_test(
    name = "game_state_mapper_test",
    size = "small",
    srcs = ["game_state_mapper_test.cc"],
    deps = [
        ":game_state_mapper",
        "//domains/games/libs/cards/golf:player",
        "@googletest//:gtest_main",
    ],
)

cc_library(
    name = "handlers",
    srcs = ["handlers.cc"],
    hdrs = ["handlers.h"],
    deps = [
        ":game_state_mapper",
        "//domains/games/libs/cards/golf",
