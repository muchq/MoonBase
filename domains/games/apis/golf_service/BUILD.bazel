load("@rules_cc//cc:defs.bzl", "cc_binary", "cc_library", "cc_test")

cc_library(
    name = "game_state_mapper",
    srcs = ["game_state_mapper.cc"],
    hdrs = ["game_state_mapper.h"],
    deps = [
        "//domains/games/libs/cards",
        "//domains/games/libs/cards:card_mapper",
        "//domains/games/libs/cards/golf",
        "//domains/games/protos/golf_ws:golf_cc_proto",
