load("@rules_pkg//pkg:tar.bzl", "pkg_tar")

# React/TypeScript SPA built with Vite. Run `npm run build` before `bazel build`.
# The dist/ directory is produced by `npm run build` in this package directory.
filegroup(
    name = "static_assets",
    srcs = glob(["dist/**"]),
    visibility = ["//visibility:public"],
)

pkg_tar(
    name = "1d4_web_assets",
    srcs = [":static_assets"],
    package_dir = "dist",
    strip_prefix = "dist/",
    visibility = ["//visibility:public"],
)
