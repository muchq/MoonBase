load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "embeddings",
    srcs = [
        "attention.go",
        "document_encoder.go",
        "pgvector.go",
        "pretrained.go",
        "sentence_encoder.go",
        "tokenizer.go",
        "training.go",
